{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // "paths": {
    //   "@components/*": ["src/components/*"],
    //   "@components": ["src/components"],
    //   "@assets/*": ["src/assets/*"],
    //   "@assets": ["src/assets"],
    //   "@crypto-icons": ["./node_modules/cryptocurrency-icons/svg/color"]
    // },
  },
  "include": [
    "src", "src/@types"
  ]
}
